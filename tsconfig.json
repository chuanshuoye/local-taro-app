{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@local-taro-app/utils": ["utils/src"],
      "@local-taro-app/ui-components": ["packages/ui-components/src"]
    }
  },
  "include": [
    "apps/*/src",
    "packages/*/src",
    "utils/src"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.swc",
    "**/.temp"
  ]
} 